   /*-webkit-gradient(*/
      /*linear,*/
      /*left top,*/
      /*left bottom,*/
      /*color-stop(0.0, #323232),*/
      /*color-stop(0.7, #232323),*/
      /*color-stop(1.0, #232323)*/
  /*);*/
  background-image: url('../static/carbon1.png');
